<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pinkblack3"
    android:orientation="vertical"
    tools:context="com.developers.droidteam.androidapp.Frag_E">
    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/l1"
        android:orientation="vertical"
        android:layout_height="match_parent">
        <TextView
            android:layout_width="match_parent"
            android:text="Android Menus "
            android:gravity="center"
            android:padding="10dp"
            android:fontFamily="serif"
            android:textSize="18sp"
            android:textColor="#fff"
            android:layout_margin="10dp"
            android:background="@drawable/button2"
            android:layout_height="wrap_content" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="5dp"
                    android:background="@drawable/buttons"
                    android:gravity="center"
                    android:minHeight="60dp"
                    android:minWidth="120dp"
                    android:id="@+id/b1"
                    android:padding="10dp"
                    android:text="Menu"
                    android:textColor="#235"
                    android:textSize="20sp" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="5dp"
                    android:background="@drawable/buttons"
                    android:gravity="center"
                    android:minHeight="60dp"
                    android:minWidth="120dp"
                    android:padding="10dp"
                    android:id="@+id/b2"

                    android:text="Option Menu"
                    android:textColor="#235"
                    android:textSize="20sp" />
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="5dp"
                    android:background="@drawable/buttons"
                    android:gravity="center"
                    android:minHeight="60dp"
                    android:minWidth="120dp"
                    android:padding="10dp"
                    android:id="@+id/b3"
                    android:text="context Menu"

                    android:textColor="#235"
                    android:textSize="20sp" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="5dp"
                    android:background="@drawable/buttons"
                    android:gravity="center"
                    android:minHeight="60dp"
                    android:minWidth="120dp"
                    android:padding="10dp"
                    android:text="PopUp Menu"
                    android:textColor="#235"
                    android:id="@+id/b4"
                    android:textSize="20sp" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="5dp"
                    android:background="@drawable/buttons"
                    android:gravity="center"
                    android:id="@+id/b5"
                    android:minHeight="60dp"
                    android:minWidth="120dp"
                    android:padding="10dp"
                    android:text="Navigation Drawer Menu "
                    android:textColor="#235"
                    android:textSize="20sp" />





            </LinearLayout>
        </ScrollView></LinearLayout>

</LinearLayout>
