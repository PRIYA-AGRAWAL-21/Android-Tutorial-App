<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.developers.droidteam.androidapp.Frag_activitylife">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:background="#138795"
        android:layout_height="match_parent">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="match_parent">
                <TextView
                    android:padding="12dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="20sp"
                    android:id="@+id/t1"
                    android:gravity="left"
                    android:background="#138795"
                    android:textColor="#fff"/>

                <TableLayout
                    android:layout_width="match_parent"
                    android:background="#138795"
                    android:id="@+id/tbl"
                    android:padding="20dp"
                    android:layout_height="wrap_content">
                    <TableRow
                        android:layout_marginBottom="10dp"
                        android:id="@+id/tr1">
                        <TextView

                            android:gravity="center"
                            android:layout_marginRight="10dp"
                            android:textSize="25sp"
                            android:textColor="#000"
                            android:shadowColor="#ff0"
                            android:text="Method"/>
                        <TextView
                            android:layout_weight="1"
                            android:gravity="center"
                            android:textSize="25sp"
                            android:textColor="#000"
                            android:shadowColor="#ff0"
                            android:text="Description"/>
                    </TableRow>
                    <TableRow>
                        <TextView
                            android:gravity="center"
                            android:textSize="20sp"
                            android:textColor="#000"
                            android:shadowColor="#ff0"
                            android:layout_marginRight="10dp"
                            android:text="onCreate"/>

                        <TextView
                            android:id="@+id/textView"
                            android:layout_weight="1"

                            android:gravity="left"
                            android:shadowColor="#ff0"
                            android:text="called when activity is first created."
                            android:textColor="#fff"
                            android:textSize="20sp" />
                    </TableRow>
                    <TableRow>
                        <TextView

                            android:textSize="20sp"
                            android:gravity="center"
                            android:textColor="#000"
                            android:shadowColor="#ff0"
                            android:layout_marginRight="10dp"
                            android:text="onStart"/>
                        <TextView
                            android:layout_weight="1"
                            android:gravity="left"
                            android:textSize="20sp"
                            android:textColor="#fff"
                            android:shadowColor="#ff0"
                            android:text="called when activity is becoming visible to the user."/>
                    </TableRow>
                    <TableRow>
                        <TextView

                            android:gravity="center"
                            android:textSize="20sp"
                            android:textColor="#000"
                            android:layout_marginRight="10dp"
                            android:shadowColor="#ff0"
                            android:text="onResume"/>
                        <TextView
                            android:layout_weight="1"
                            android:textSize="20sp"
                            android:textColor="#fff"
                            android:gravity="left"
                            android:shadowColor="#ff0"
                            android:text="called when activity will start interacting with the user."/>
                    </TableRow>
                    <TableRow>
                        <TextView

                            android:textSize="20sp"
                            android:gravity="center"
                            android:textColor="#000"
                            android:shadowColor="#ff0"
                            android:layout_marginRight="10dp"
                            android:text="onPause"/>
                        <TextView
                            android:layout_weight="1"
                            android:textSize="20sp"
                            android:gravity="left"
                            android:textColor="#fff"
                            android:shadowColor="#ff0"
                            android:text="called when activity is not visible to the user i.e. (partially hiding the activity)"/>
                    </TableRow>
                    <TableRow>
                        <TextView

                            android:gravity="center"
                            android:textSize="20sp"
                            android:layout_marginRight="10dp"
                            android:textColor="#000"
                            android:shadowColor="#ff0"
                            android:text="onRestart"/>
                        <TextView
                            android:layout_weight="1"
                            android:gravity="left"

                            android:textSize="20sp"
                            android:textColor="#fff"
                            android:shadowColor="#ff0"
                            android:text="called after your activity is stopped, prior to start."/>
                    </TableRow>
                    <TableRow>
                        <TextView

                            android:gravity="center"
                            android:textSize="20sp"
                            android:layout_marginRight="10dp"
                            android:textColor="#000"
                            android:shadowColor="#ff0"
                            android:text="onStop"/>
                        <TextView
                            android:layout_weight="1"
                            android:gravity="left"

                            android:textSize="20sp"
                            android:textColor="#fff"
                            android:shadowColor="#ff0"
                            android:text="called when activity is no longer visible to the user i.e.(Completely hiding Act.)"/>
                    </TableRow>
                    <TableRow>
                        <TextView

                            android:gravity="center"
                            android:textSize="20sp"
                            android:layout_marginRight="10dp"
                            android:textColor="#000"
                            android:shadowColor="#ff0"
                            android:text="onDestroy"/>
                        <TextView
                            android:layout_weight="1"
                            android:gravity="left"

                            android:textSize="20sp"
                            android:textColor="#fff"
                            android:shadowColor="#ff0"
                            android:text="called before the activity is destroyed."/>
                    </TableRow>

                </TableLayout>
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:id="@+id/iv1"
                    />
                <TextView
                    android:padding="12dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="20sp"
                    android:id="@+id/t2"
                    android:gravity="left"
                    android:background="#138795"
                    android:textColor="#fff"/>
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:id="@+id/iv2"
                    />
                <TextView
                    android:padding="12dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="20sp"
                    android:id="@+id/t3"
                    android:gravity="left"
                    android:background="#138795"
                    android:textColor="#fff"/>
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:id="@+id/iv3"
                    />
                <TextView
                    android:padding="12dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="20sp"
                    android:id="@+id/t4"
                    android:gravity="left"
                    android:background="#138795"
                    android:textColor="#fff"/>
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:id="@+id/iv4"
                    />
                <TextView
                    android:padding="12dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="20sp"
                    android:id="@+id/t5"
                    android:gravity="left"
                    android:background="#138795"
                    android:textColor="#fff"/>
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:id="@+id/iv5"
                    />
                <TextView
                    android:padding="12dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="20sp"
                    android:id="@+id/t6"
                    android:gravity="left"
                    android:background="#138795"
                    android:textColor="#fff"/>
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:id="@+id/iv6"
                    />
                </LinearLayout>
            </ScrollView>
        </LinearLayout>
    </LinearLayout>