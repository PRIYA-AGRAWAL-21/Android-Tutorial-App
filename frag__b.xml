<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/back2a"
    tools:context="com.developers.droidteam.androidapp.Frag_B">

    <TextView
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:minWidth="300dp"
        android:text="Android Widget "
        android:fontFamily="serif"
        android:gravity="center"
        android:padding="10dp"
        android:textSize="25sp"
        android:textColor="#fff"
        android:layout_margin="10dp"
        android:background="@drawable/button2background"
        android:layout_height="wrap_content" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:background="@drawable/button2"
                android:gravity="center"
                android:minHeight="60dp"
                android:minWidth="120dp"
                android:padding="10dp"
                android:text="UI WIdgets"
                android:textColor="#fff"
                android:textSize="20sp" />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="5dp"

                android:background="@drawable/button2"
                android:gravity="center"
                android:minHeight="60dp"
                android:minWidth="120dp"
                android:padding="10dp"
                android:text="ViewGroup"
                android:textColor="#fff"
                android:textSize="20sp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:background="@drawable/button2"
                android:gravity="center"
                android:minHeight="60dp"
                android:minWidth="120dp"
                android:padding="10dp"
                android:text="Working With Buttons"
                android:textColor="#fff"
                android:textSize="20sp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:background="@drawable/button2"
                android:gravity="center"
                android:minHeight="60dp"
                android:minWidth="120dp"
                android:padding="10dp"
                android:text="Toast"
                android:textColor="#fff"
                android:textSize="20sp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:background="@drawable/button2"
                android:gravity="center"
                android:minHeight="60dp"
                android:minWidth="120dp"
                android:padding="10dp"
                android:text="Toggle Button"
                android:textColor="#fff"
                android:textSize="20sp" />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:background="@drawable/button2"
                android:gravity="center"
                android:minHeight="60dp"
                android:minWidth="120dp"
                android:padding="10dp"
                android:text="CheckBox"
                android:textColor="#fff"
                android:textSize="20sp" />


            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:background="@drawable/button2"
                android:gravity="center"
                android:minHeight="60dp"
                android:minWidth="120dp"
                android:padding="10dp"
                android:text="Alert Dialog"
                android:textColor="#fff"
                android:textSize="20sp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:background="@drawable/button2"
                android:gravity="center"
                android:minHeight="60dp"
                android:minWidth="120dp"
                android:padding="10dp"
                android:text="Spinner"
                android:textColor="#fff"
                android:textSize="20sp" />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:background="@drawable/button2"
                android:gravity="center"
                android:minHeight="60dp"
                android:minWidth="120dp"
                android:padding="10dp"
                android:text="AutoComplete TextView"
                android:textColor="#fff"
                android:textSize="20sp" />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:background="@drawable/button2"
                android:gravity="center"
                android:minHeight="60dp"
                android:minWidth="120dp"
                android:padding="10dp"
                android:text="Rating Bar"
                android:textColor="#fff"
                android:textSize="20sp" />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:background="@drawable/button2"
                android:gravity="center"
                android:minHeight="60dp"
                android:minWidth="120dp"
                android:padding="10dp"
                android:text="Rating Bar"
                android:textColor="#fff"
                android:textSize="20sp" />

            <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:background="@drawable/button2"
            android:gravity="center"
            android:minHeight="60dp"
            android:minWidth="120dp"
            android:padding="10dp"
            android:text="Date Picker"
            android:textColor="#fff"
            android:textSize="20sp" />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:background="@drawable/button2"
                android:gravity="center"
                android:minHeight="60dp"
                android:minWidth="120dp"
                android:padding="10dp"
                android:text="Time Picker"
                android:textColor="#fff"
                android:textSize="20sp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="5dp"

                android:background="@drawable/button2"
                android:gravity="center"
                android:minHeight="60dp"
                android:minWidth="120dp"
                android:padding="10dp"
                android:text="Process Bar"
                android:textColor="#fff"
                android:textSize="20sp" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
