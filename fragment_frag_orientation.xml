<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.developers.droidteam.androidapp.Frag_orientation">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:background="#138795"
        android:layout_height="match_parent">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="match_parent">
                <TextView
                    android:padding="12dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="20sp"
                    android:id="@+id/t1"
                    android:gravity="left"
                    android:background="#138795"
                    android:textColor="#fff"/>
                <TableLayout
                    android:layout_width="match_parent"
                    android:background="#138795"
                    android:id="@+id/tbl"
                    android:padding="20dp"
                    android:layout_height="wrap_content">
                    <TableRow
                        android:layout_marginBottom="10dp"
                        android:id="@+id/tr1">
                        <TextView

                            android:gravity="center"
                            android:layout_marginRight="10dp"
                            android:textSize="25sp"
                            android:textColor="#000"
                            android:shadowColor="#ff0"
                            android:text="VALUE "/>
                        <TextView
                            android:layout_weight="1"
                            android:gravity="center"
                            android:textSize="25sp"
                            android:textColor="#000"
                            android:shadowColor="#ff0"
                            android:text="DESCRIPTION"/>
                    </TableRow>
                    <TableRow>
                        <TextView
                            android:gravity="center"
                            android:textSize="20sp"
                            android:textColor="#000"
                            android:shadowColor="#ff0"
                            android:layout_marginRight="10dp"
                            android:text="unspecified  "/>

                        <TextView
                            android:id="@+id/textView"
                            android:layout_weight="1"

                            android:gravity="left"
                            android:shadowColor="#ff0"
                            android:text=" It is the default value.In such case, system chooses the orientation."
                            android:textColor="#fff"
                            android:textSize="20sp" />
                    </TableRow>
                    <TableRow>
                        <TextView

                            android:textSize="20sp"
                            android:gravity="center"
                            android:textColor="#000"
                            android:shadowColor="#ff0"
                            android:layout_marginRight="10dp"
                            android:text="portrait"/>
                        <TextView
                            android:layout_weight="1"
                            android:gravity="left"
                            android:textSize="20sp"
                            android:textColor="#fff"
                            android:shadowColor="#ff0"
                            android:text="Taller not wider"/>
                    </TableRow>
                    <TableRow>
                        <TextView

                            android:gravity="center"
                            android:textSize="20sp"
                            android:textColor="#000"
                            android:layout_marginRight="10dp"
                            android:shadowColor="#ff0"
                            android:text="landscape  "/>
                        <TextView
                            android:layout_weight="1"
                            android:textSize="20sp"
                            android:textColor="#fff"
                            android:gravity="left"
                            android:shadowColor="#ff0"
                            android:text="Wider not taller"/>
                    </TableRow>
                    <TableRow>
                        <TextView

                            android:textSize="20sp"
                            android:gravity="center"
                            android:textColor="#000"
                            android:shadowColor="#ff0"
                            android:layout_marginRight="10dp"
                            android:text="sensor"/>
                        <TextView
                            android:layout_weight="1"
                            android:textSize="20sp"
                            android:gravity="left"
                            android:textColor="#fff"
                            android:shadowColor="#ff0"
                            android:text="orientation is determined by the device orientation sensor."/>
                    </TableRow>
                    </TableLayout>
                <TextView
                    android:padding="12dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="20sp"
                    android:id="@+id/t2"
                    android:gravity="left"
                    android:background="#138795"
                    android:textColor="#fff"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"

                    android:id="@+id/iv1"
                    />
                <ImageView
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"

                    android:id="@+id/iv2"
                    />
                <TextView
                    android:padding="12dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="20sp"
                    android:id="@+id/t3"
                    android:gravity="left"
                    android:background="#138795"
                    android:textColor="#fff"/>
                <ImageView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"

                    android:id="@+id/iv3"
                    />
                <TextView
                    android:padding="12dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="20sp"
                    android:id="@+id/t4"
                    android:gravity="left"
                    android:background="#138795"
                    android:textColor="#fff"/>
                <ImageView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"

                    android:id="@+id/iv4"
                    />
                <TextView
                    android:padding="12dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="20sp"
                    android:id="@+id/t5"
                    android:gravity="left"
                    android:background="#138795"
                    android:textColor="#fff"/>
                <ImageView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:layout_gravity="center"

                    android:id="@+id/iv5"
                    />
                <ImageView
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"

                    android:id="@+id/iv6"
                    />
                <TextView
                    android:layout_marginTop="10dp"
                    android:padding="12dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="20sp"
                    android:id="@+id/t6"
                    android:gravity="left"
                    android:background="#138795"
                    android:textColor="#fff"/>
                <ImageView
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"

                    android:id="@+id/iv7"
                    />
                <ImageView
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"

                    android:id="@+id/iv8"
                    />
                <ImageView
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:layout_gravity="center"

                    android:id="@+id/iv9"
                    />
                </LinearLayout>
            </ScrollView>
        </LinearLayout>
    </LinearLayout>

