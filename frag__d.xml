<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg5"
    android:orientation="vertical"
    tools:context="com.developers.droidteam.androidapp.Frag_D">
    <TextView
        android:layout_width="match_parent"
        android:text="Android Fragments"
        android:gravity="center"
        android:padding="10dp"
        android:fontFamily="serif"
        android:textSize="25sp"
        android:textColor="#fff"
        android:layout_margin="10dp"
        android:background="@drawable/button4background"
        android:layout_height="wrap_content" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:background="@drawable/button4"
                android:id="@+id/b1"
                android:gravity="center"
                android:minHeight="60dp"
                android:minWidth="120dp"
                android:padding="10dp"
                android:text="Fragments"
                android:textColor="#235"
                android:textSize="20sp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:background="@drawable/button4"
                android:id="@+id/b2"
                android:gravity="center"
                android:minHeight="60dp"
                android:minWidth="120dp"
                android:padding="10dp"
                android:text="Static Insertion"
                android:textColor="#235"
                android:textSize="20sp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:id="@+id/b3"
                android:background="@drawable/button4"
                android:gravity="center"
                android:minHeight="60dp"
                android:minWidth="120dp"
                android:padding="10dp"
                android:text="Dynamic Insertion"
                android:textColor="#235"
                android:textSize="20sp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/b4"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:background="@drawable/button4"
                android:gravity="center"
                android:minHeight="60dp"
                android:minWidth="120dp"
                android:padding="10dp"
                android:text="Communication B/w Fragments"
                android:textColor="#235"
                android:textSize="20sp" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>