<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.developers.droidteam.androidapp.Frag_application_component">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:background="#138795"
        android:layout_height="match_parent">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="match_parent">
                <TextView
                    android:padding="12dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="20sp"
                    android:id="@+id/txt"
                    android:gravity="left"
                    android:background="#138795"
                    android:textColor="#fff"/>
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"

                    android:id="@+id/iv1"
                    />
                <TableLayout
                    android:layout_width="match_parent"
                    android:background="#138795"
                    android:id="@+id/tbl"
                    android:padding="20dp"
                    android:layout_height="wrap_content">
                    <TableRow
                        android:layout_marginBottom="10dp"
                        android:id="@+id/tr1">
                        <TextView

                            android:gravity="center"
android:layout_marginRight="10dp"
                            android:textSize="25sp"
                            android:textColor="#000"
                            android:shadowColor="#ff0"
                            android:text="Components"/>
                        <TextView
                            android:layout_weight="1"
                            android:gravity="center"
                            android:textSize="25sp"
                            android:textColor="#000"
                            android:shadowColor="#ff0"
                            android:text="Description"/>
                    </TableRow>
                    <TableRow>
                        <TextView
                            android:gravity="center"
                            android:textSize="20sp"
                            android:textColor="#000"
                            android:shadowColor="#ff0"
                            android:layout_marginRight="10dp"
                            android:text="Activities"/>

                        <TextView
                            android:id="@+id/textView"
                            android:layout_weight="1"

                            android:gravity="left"
                            android:shadowColor="#ff0"
                            android:text="They dictate the UI and handle the user interaction to the smartphone screen"
                            android:textColor="#fff"
                            android:textSize="20sp" />
                    </TableRow>
                    <TableRow>
                        <TextView

                            android:textSize="20sp"
                            android:gravity="center"
                            android:textColor="#000"
                            android:shadowColor="#ff0"
                            android:layout_marginRight="10dp"
                            android:text="Services"/>
                        <TextView
                            android:layout_weight="1"
                            android:gravity="left"
                            android:textSize="20sp"
                            android:textColor="#fff"
                            android:shadowColor="#ff0"
                            android:text="They handle background processing associated with an application."/>
                    </TableRow>
                    <TableRow>
                        <TextView

                            android:gravity="center"
                            android:textSize="20sp"
                            android:textColor="#000"
                            android:layout_marginRight="10dp"
                            android:shadowColor="#ff0"
                            android:text="Broadcast Receiver"/>
                        <TextView
                            android:layout_weight="1"
                            android:textSize="20sp"
                            android:textColor="#fff"
                            android:gravity="left"
                            android:shadowColor="#ff0"
                            android:text="They handle communication between  Android OS and applications."/>
                    </TableRow>
                    <TableRow>
                        <TextView

                            android:textSize="20sp"
                            android:gravity="center"
                            android:textColor="#000"
                            android:shadowColor="#ff0"
                            android:layout_marginRight="10dp"
                            android:text="Content Providers"/>
                        <TextView
                            android:layout_weight="1"
                            android:textSize="20sp"
                            android:gravity="left"
                            android:textColor="#fff"
                            android:shadowColor="#ff0"
                            android:text="They handle data and database management issues."/>
                    </TableRow>
                    <TableRow>
                        <TextView

                            android:gravity="center"
                            android:textSize="20sp"
                            android:layout_marginRight="10dp"
                            android:textColor="#000"
                            android:shadowColor="#ff0"
                            android:text="Intents"/>
                        <TextView
                            android:layout_weight="1"
                            android:gravity="left"

                            android:textSize="20sp"
                            android:textColor="#fff"
                            android:shadowColor="#ff0"
                            android:text="Messages wiring components together."/>
                    </TableRow>

                </TableLayout>
                <TextView
                    android:padding="12dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="20sp"
                    android:id="@+id/t1"
                    android:gravity="left"
                    android:background="#138795"
                    android:textColor="#fff"
                    />
                <TableLayout
                    android:layout_width="match_parent"
                    android:background="#138795"
                    android:id="@+id/tbl2"
                    android:padding="20dp"
                    android:layout_height="wrap_content">
                    <TableRow
                        android:layout_marginBottom="10dp"
                        android:id="@+id/tr2">
                        <TextView

                            android:gravity="center"
                            android:layout_marginRight="10dp"
                            android:textSize="25sp"
                            android:textColor="#000"
                            android:shadowColor="#ff0"
                            android:text="Components"


/>
                        <TextView
                            android:layout_weight="1"
                            android:gravity="center"
                            android:textSize="25sp"
                            android:textColor="#000"
                            android:shadowColor="#ff0"
                            android:text="Description"/>
                    </TableRow>
                    <TableRow>
                        <TextView
                            android:gravity="center"
                            android:textSize="20sp"
                            android:textColor="#000"
                            android:shadowColor="#ff0"
                            android:layout_marginRight="10dp"
                            android:text="Fragments"/>


                        <TextView
                            android:layout_weight="1"

                            android:gravity="left"
                            android:shadowColor="#ff0"
                            android:text="Represent a behavior or a portion of user interface in an Activity."
                            android:textColor="#fff"
                            android:textSize="20sp" />
                    </TableRow>
                    <TableRow>
                        <TextView

                            android:textSize="20sp"
                            android:gravity="center"
                            android:textColor="#000"
                            android:shadowColor="#ff0"
                            android:layout_marginRight="10dp"
                            android:text="Views"/>
                        <TextView
                            android:layout_weight="1"
                            android:gravity="left"
                            android:textSize="20sp"
                            android:textColor="#fff"
                            android:shadowColor="#ff0"
                            android:text="UI elements that are drawn onscreen including buttons, lists  etc."/>
                    </TableRow>
                    <TableRow>
                        <TextView

                            android:gravity="center"
                            android:textSize="20sp"
                            android:textColor="#000"
                            android:layout_marginRight="10dp"
                            android:shadowColor="#ff0"
                            android:text="Layouts	"/>
                        <TextView
                            android:layout_weight="1"
                            android:textSize="20sp"
                            android:textColor="#fff"
                            android:gravity="left"
                            android:shadowColor="#ff0"
                            android:text="View hierarchies that control screen format and appearance of the views.
"/>
                    </TableRow>
                    <TableRow>
                        <TextView

                            android:textSize="20sp"
                            android:gravity="center"
                            android:textColor="#000"
                            android:shadowColor="#ff0"
                            android:layout_marginRight="10dp"
                            android:text="Resources"/>
                        <TextView
                            android:layout_weight="1"
                            android:textSize="20sp"
                            android:gravity="left"
                            android:textColor="#fff"
                            android:shadowColor="#ff0"
                            android:text="External elements,such as strings,constants and drawable pictures."/>
/>
                    </TableRow>
                    <TableRow>
                        <TextView

                            android:gravity="center"
                            android:textSize="20sp"
                            android:layout_marginRight="10dp"
                            android:textColor="#000"
                            android:shadowColor="#ff0"
                            android:text="Manifest"/>
                        <TextView
                            android:layout_weight="1"
                            android:gravity="left"

                            android:textSize="20sp"
                            android:textColor="#fff"
                            android:shadowColor="#ff0"
                            android:text="Configuration file for the application"/>
                    </TableRow>

                </TableLayout></LinearLayout>

        </ScrollView>
    </LinearLayout>

</LinearLayout>
